<html xmlns="http://www.w3.org/1999/xhtml" ng-app="ShoppingSmartApp">
<head>
    <title>ShoppingSmartApp Web Application</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <base href="/" />
</head>
<body ng-controller="AccountController as account" >

    <div class="container">
        <div ng-show="account.isLoggedIn()">
            Welcome: {{account.getUserName()}}
        </div>

        <img src="~/images/Super7.png" class= "corner-image">
        <img src="~/images/Super2.png" class="center-image">
        <img src="~/images/Super3.png" class="center-image">
        <img src="~/images/Super4.png" class="center-image">
        <img src="~/images/foodlive.png" class= "corner-image">
        
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
               <a class="navbar-brand" ui-sref="home"><strong><spam class="gold-dollar">$</spam>mart <spam class="gold-dollar"> $</spam>hopping App</strong></a>
            </div>
            <ul class="nav navbar-nav">
                <li><a ui-sref="home">Home</a></li>
                <li> <a ui-sref="supermarket" ng-show="account.isLoggedIn() && account.getClaim('isAdmin')">Supermarkets </a></li> 
                <li> <a ui-sref="product" ng-show="account.isLoggedIn() && account.getClaim('isAdmin')">Products </a></li> 
                <li> <a ui-sref="shoppinglist" ng-show="account.isLoggedIn() && account.getClaim('isConsumer')">Shopping </a></li> 
                <li><a ui-sref="about">About</a></li>
                <li><a ui-sref="login" ng-show="!account.isLoggedIn()" >Login</a></li>
                <li><a ui-sref="register" ng-show="!account.isLoggedIn()">Register</a></li>
                <li><a ui-sref="home" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a></li>              
            </ul>
        </nav>
        <div>
            <hr />
            
            <ui-view></ui-view>
        </div>
    </div>

    <!-- Library Files -->
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>

    <!-- App Files-->
    <script src="~/ngapp/app.js"></script>
    <script src="~/ngapp/controllers/controllers.js"></script>
    <script src="~/ngapp/controllers/productControllers.js"></script>
    <script src="~/ngapp/controllers/supermarketControllers.js"></script>
    <script src="~/ngapp/services/services.js"></script>


    <!-- Security -->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/services/accountservice.js"></script>

</body>
</html>
